"set relativenumber  " 开启相对行号
imap <C-h><C-h> <ESC>I#<ESC>
nmap <C-h><C-h> I#<ESC>
imap <C-j><C-j> <ESC>I//<ESC>
nmap <C-j><C-j> I//<ESC>
imap <C-k><C-k> <ESC>02x
nmap <C-k><C-k> 02x
imap <ESC><ESC> <ESC>:w<CR>
nmap <ESC><ESC> : :w<CR>
imap <C-w> <ESC><C-w><C-w>
nmap <C-w> <C-w><C-w>
imap <F12> <ESC>:wq<CR>
nmap <F12> :wq<CR>
vmap <C-y> "+y
vmap <C-p> "+p
vmap <C-d> "+d
nmap <leader>0 :Tab /,<cr>
nmap <leader>6 :Tab /><cr>
nmap <leader>7 :Tab /&<cr>
nmap <leader>8 :Tab /\*<cr>
set tw=80 
"
